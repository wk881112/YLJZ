<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="daos.xml"/>

    <!-- services -->
    <bean id="userService" name="userServiceName" class="com.neo.springexamples.ioc.pojo.UserService">
        <!-- 通过属性设置 -->
        <!--<property name="demoStr" value="abc"/>-->
        <!-- 通过有参数构造创建，基础类型使用value, 引用类型使用ref -->
        <constructor-arg index="0" name="demoStr" value="abc"></constructor-arg>
    </bean>

    <bean id="petStore" class="com.neo.springexamples.ioc.pojo.PetStoreServiceImpl">
        <property name="accountDao" ref="accountDao"/>
        <property name="itemDao" ref="itemDao"/>
        <!-- additional collaborators and configuration for this bean go here -->
    </bean>

    <!-- more bean definitions for services go here -->
</beans>